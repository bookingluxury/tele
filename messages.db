import sqlite3

conn = sqlite3.connect("messages.db")  # Tạo file SQLite
cursor = conn.cursor()

# Tạo bảng messages
cursor.execute("""
    CREATE TABLE IF NOT EXISTS messages (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        user_id TEXT,
        user_message TEXT,
        bot_response TEXT,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
    )
""")

conn.commit()
conn.close()
print("✅ Database messages.db đã được tạo thành công!")
